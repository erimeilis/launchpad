{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Launchpad",
  "version": "0.8.1",
  "identifier": "red.launchpad",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Launchpad",
        "width": 1920,
        "height": 1080,
        "fullscreen": false,
        "maximized": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "skipTaskbar": false,
        "hiddenTitle": true,
        "visible": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Â© 2025 Launchpad Contributors. Licensed under MIT.",
    "category": "Utility",
    "shortDescription": "Full-screen app launcher for macOS",
    "longDescription": "A recreation of the original macOS Launchpad that Apple removed in macOS 26 Tahoe. Features custom app organization, folders, drag-and-drop, search, and tag-based filtering."
  }
}
