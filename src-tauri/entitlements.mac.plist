<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for App Store distribution -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- File system access - read Applications folders -->
    <key>com.apple.security.temporary-exception.files.absolute-path.read-only</key>
    <array>
        <string>/Applications/</string>
        <string>/System/Applications/</string>
    </array>

    <!-- User-selected files (for any file picker operations) -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>

    <!-- Allow launching other applications -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Required for Tauri WebView and JIT compilation -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Network access (for potential future features like updates) -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>
